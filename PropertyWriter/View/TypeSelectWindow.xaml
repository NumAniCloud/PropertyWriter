<Window x:Class="PropertyWriter.TypeSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Property Writer" Height="350" Width="525">
	
	<StackPanel Orientation="Vertical" Margin="10">
		<TextBlock TextWrapping="Wrap" Text="{Binding DllName}"/>
		<Button Command="{Binding OpenCommand}" Content="開く..." Width="75" HorizontalAlignment="Right"/>
		<Border BorderBrush="Black" BorderThickness="1" Height="1" Margin="5"/>
		<ComboBox Name="TypeList" ItemsSource="{Binding Types}" SelectedIndex="{Binding SelectedTypeIndex}"/>
		<ItemsControl ItemsSource="{Binding Properties}"/>
		<Button Click="Button_Click" Content="決定" Width="75" HorizontalAlignment="Right"/>
	</StackPanel>
</Window>
