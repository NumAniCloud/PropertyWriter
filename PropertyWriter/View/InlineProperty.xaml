<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
										xmlns:local="clr-namespace:PropertyWriter.Model"
										x:Class="PropertyWriter.View.InlineProperty">
    
	<DataTemplate DataType="{x:Type local:InstanceAndPropertyInfo}">
		<StackPanel Orientation="Horizontal" Margin="2" Height="24">
			<TextBlock Text="{Binding PropertyInfo.Name}" Width="50" TextAlignment="Right"/>
			<TextBlock Text=":" Margin="4 0"/>
			<ContentControl Content="{Binding Instance}" Focusable="False" />
		</StackPanel>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:ClassModel}">
		<StackPanel Orientation="Horizontal">
			<Button Content="編集" Click="OpenBlockWindow"/>
			<TextBlock Text=" (" />
			<TextBlock Text="{Binding Path=FormatedString.Value}" />
			<TextBlock Text=")" />
		</StackPanel>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:IntModel}">
		<TextBox Text="{Binding Path=IntValue.Value}" MinWidth="100" Height="24"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:BoolModel}">
		<CheckBox IsChecked="{Binding Path=BoolValue.Value}" VerticalAlignment="Center"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:StringModel}">
		<TextBox Text="{Binding Path=StringValue.Value}" AcceptsReturn="True" TextWrapping="WrapWithOverflow" Height="24" MinWidth="100"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:FloatModel}">
		<TextBox Text="{Binding Path=FloatValue.Value}" Height="24" MinWidth="100"/>
	</DataTemplate>
	
	<DataTemplate DataType="{x:Type local:EnumModel}">
		<ComboBox ItemsSource="{Binding Path=EnumValues}" SelectedItem="{Binding EnumValue.Value}"/>
	</DataTemplate>
	
	<DataTemplate DataType="{x:Type local:BasicCollectionModel}">
		<StackPanel Orientation="Horizontal">
			<Button Content="編集" Click="OpenBlockWindow"/>
			<TextBlock Text=" (" />
			<TextBlock Text="{Binding Path=FormatedString.Value}" />
			<TextBlock Text=")" />
		</StackPanel>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:ComplicateCollectionModel}">
		<StackPanel Orientation="Horizontal">
			<Button Content="編集" Click="OpenBlockWindow"/>
			<TextBlock Text=" (" />
			<TextBlock Text="{Binding Path=FormatedString.Value}" />
			<TextBlock Text=")" />
		</StackPanel>
	</DataTemplate>

</ResourceDictionary>