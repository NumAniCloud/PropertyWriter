<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
										xmlns:s="clr-namespace:System;assembly=mscorlib"
										xmlns:local="clr-namespace:PropertyWriter.Model"
										xmlns:c="clr-namespace:PropertyWriter.View">

	<DataTemplate DataType="{x:Type local:ComplicateCollectionInstance}">
		<c:ComplicateCollectionControl DataContext="{Binding Path=.}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:ClassInstance}">
		<DataTemplate.Resources>
			<ResourceDictionary Source="InlineProperty.xaml"/>
		</DataTemplate.Resources>
		<ItemsControl ItemsSource="{Binding Properties}" Focusable="False" Margin="5"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:IntInstance}">
		<TextBox Text="{Binding Path=IntValue}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:BoolInstance}">
		<CheckBox IsChecked="{Binding Path=BoolValue}"/>
	</DataTemplate>

</ResourceDictionary>