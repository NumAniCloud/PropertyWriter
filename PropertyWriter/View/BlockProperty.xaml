<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
										xmlns:s="clr-namespace:System;assembly=mscorlib"
										xmlns:local="clr-namespace:PropertyWriter.Model"
										xmlns:c="clr-namespace:PropertyWriter.View"
										xmlns:instance="clr-namespace:PropertyWriter.Model.Instance">

	<DataTemplate DataType="{x:Type instance:ComplicateCollectionViewModel}">
		<c:ComplicateCollectionControl DataContext="{Binding Path=.}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type instance:ClassViewModel}">
		<c:ClassControl DataContext="{Binding Path=.}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type instance:StructViewModel}">
		<c:ClassControl DataContext="{Binding Path=.}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type instance:IntViewModel}">
		<TextBox Text="{Binding Path=IntValue.Value}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type instance:BoolViewModel}">
		<CheckBox IsChecked="{Binding Path=BoolValue.Value}"/>
	</DataTemplate>
	
	<DataTemplate DataType="{x:Type instance:BasicCollectionViewModel}">
		<c:BasicCollectionControl
			HorizontalAlignment="Stretch" 
			VerticalAlignment="Stretch"
			DataContext="{Binding Path=.}"
			Padding="8"/>
	</DataTemplate>

</ResourceDictionary>