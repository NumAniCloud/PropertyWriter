<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
										xmlns:s="clr-namespace:System;assembly=mscorlib"
										xmlns:local="clr-namespace:PropertyWriter.Model"
										xmlns:c="clr-namespace:PropertyWriter.View">

	<DataTemplate DataType="{x:Type local:ComplicateCollectionInstance}">
		<c:ComplicateCollectionControl DataContext="{Binding Path=.}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:ClassInstance}">
		<c:ClassControl DataContext="{Binding Path=.}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:IntInstance}">
		<TextBox Text="{Binding Path=IntValue.Value}"/>
	</DataTemplate>

	<DataTemplate DataType="{x:Type local:BoolInstance}">
		<CheckBox IsChecked="{Binding Path=BoolValue.Value}"/>
	</DataTemplate>
	
	<DataTemplate DataType="{x:Type local:BasicCollectionInstance}">
		<c:BasicCollectionControl
			HorizontalAlignment="Stretch" 
			VerticalAlignment="Stretch"
			DataContext="{Binding Path=.}"
			Padding="8"/>
	</DataTemplate>

</ResourceDictionary>