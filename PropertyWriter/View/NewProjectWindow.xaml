<Window x:Class="PropertyWriter.View.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertyWriter.View"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:messaging="http://schemas.livet-mvvm.net/2011/wpf"
        mc:Ignorable="d"
        Title="{Binding ProjectPath.Value}" Height="200" Width="480">
    
    <i:Interaction.Triggers>
        <messaging:InteractionMessageTrigger Messenger="{Binding Messenger}">
            <messaging:WindowInteractionMessageAction/>
        </messaging:InteractionMessageTrigger>
    </i:Interaction.Triggers>

    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="アセンブリ:"/>
            <TextBox Text="{Binding AssemblyPath.Value}" Grid.Column="1"/>
            <Button Content="参照…" Command="{Binding OpenAssemblyCommand}" Grid.Column="2"/>

            <Label Content="使用する型:" Grid.Row="1"/>
            <ComboBox ItemsSource="{Binding AvailableProjectTypes.Value}"
                      SelectedItem="{Binding ProjectType.Value}" Grid.Row="1" Grid.Column="1"/>

            <Label Content="出力パス:" Grid.Row="2"/>
            <TextBox Text="{Binding ExportPath.Value}" Grid.Row="2" Grid.Column="1"/>
            <Button Content="参照…" Command="{Binding SelectExportPathCommand}" Grid.Row="2" Grid.Column="2"/>
        </Grid>
        
        <Button Content="作成" HorizontalAlignment="Right" Command="{Binding ConfirmCommand}"/>
    </StackPanel>
    
</Window>
